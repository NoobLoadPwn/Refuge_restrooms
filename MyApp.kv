#:import MapView kivy.garden.mapview.MapView
<homeScreen>:
    adresse: adresse
    antal: antal

    GridLayout:
        cols:1

        GridLayout:
			id: screen1input
            cols:2

            Label:
                text: "Adresse: "
                font_size:30
            TextInput:
                id: adresse
				text: "k√∏benhavn"
                multiline:False

            Label:
                text: "Antal toiletter: "
                font_size:30
            TextInput:
                id: antal
				text: "5"
                multiline:False

            Label:
                text:"ADA"
                font_size:30
            CheckBox:
                id:Ada
                on_state: root.checkBoxClick(self,self.active)

            Label:
                text:"Unisex"
                font_size:30
            CheckBox:
                id:Unisex
                on_state: root.checkBoxClick(self, self.active)

        Button:
            text:"Submit"
			size: 1650, 200
			size_hint: None, None
            on_release:
                app.sm.current = "Results" if antal.text.isnumeric() == True else "category"
                app.sm.transition.direction = "left"
            #on_release:
				#if antal.text == int(antal.text):
				#app.sm.transition.direction = 'left'
				#app.sm.current = 'Results'

<Resultat>:
	id: resultatscreen
	on_pre_enter:
		self.load_coords(app.sm.get_screen('category').ids.adresse.text)
		self.criteria(app.sm.get_screen('category').ids.Ada.state, app.sm.get_screen('category').ids.Unisex.state)
		self.load_markers(app.sm.get_screen('category').ids.antal.text, app.sm.get_screen('category').ids.adresse.text,)

	on_pre_leave:
		self.remove_markers()

    BoxLayout:
        orientation: 'vertical'
		MapView:
			id: map_coords
			lat: root.coords[0]
			lon: root.coords[1]
			zoom: 10

        Button:
			id: bstate
            text: 'Tilbage'
			size: 1650, 200
			size_hint: None, None
            on_press:
                app.sm.transition.direction = 'right'
                app.sm.current = 'category'
