
<MyGrid>:

    adresse: adresse
    antal: antal

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Adresse: "
                font_size:30
            TextInput:
                id: adresse
                multiline:False

            Label:
                text: "Antal toiletter: "
                font_size:30
            TextInput:
                id: antal
                multiline:False

            Label:
                text:"ADA"
                font_size:30
            CheckBox:
                id:ADA
                on_state: root.checkBoxClick(self,self.active, "ADA")

            Label:
                text:"Unisex"
                font_size:30
            CheckBox:
                id:Unisex
                on_state: root.checkBoxClick(self, self.active,"Unisex")



        Button:
            text:"Submit"
            on_press:
                root.btn()
                app.sm.transition.direction = 'left'
                app.sm.current = 'Results'

<Resultat>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: adresser
            text: ''
        Button:
            text: 'Tilbage'
            on_press:
                app.sm.transition.direction = 'right'
                app.sm.current = 'category'
