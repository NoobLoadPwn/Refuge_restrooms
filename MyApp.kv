#:import MapView kivy.garden.mapview.MapView
<MyGrid>:
	id: textinput
    adresse: adresse
    antal: antal

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Adresse: "
                font_size:30
            TextInput:
                id: adresse
				text: "k√∏benhavn"
                multiline:False

            Label:
                text: "Antal toiletter: "
                font_size:30
            TextInput:
                id: antal
				text: "5"
                multiline:False

            Label:
                text:"ADA"
                font_size:30
            CheckBox:
                id:ADA
                on_state: root.checkBoxClick(self,self.active, "ADA")

            Label:
                text:"Unisex"
                font_size:30
            CheckBox:
                id:Unisex
                on_state: root.checkBoxClick(self, self.active,"Unisex")



        Button:
            text:"Submit"
			size: 1650, 200
			size_hint: None, None
            on_press:
                root.btn()
                app.sm.transition.direction = 'left'
                app.sm.current = 'Results'

<Resultat>:
	id: resultatscreen
    BoxLayout:
        orientation: 'vertical'
		MapView:
			id: map_coords
			lat: 10
			lon: 10
			zoom: 13
		Button:
			text: "update"
			size: 1650, 200
			size_hint: None, None
			on_press:
				root.update()
        Button:
            text: 'Tilbage'
			size: 1650, 200
			size_hint: None, None
            on_press:
                app.sm.transition.direction = 'right'
                app.sm.current = 'category'
